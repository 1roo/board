package com.spring.myboard.reply.service;

import java.util.HashMap;
import java.util.List;
import java.util.Map;

import org.springframework.beans.factory.annotation.Autowired;
import org.springframework.stereotype.Service;

import com.spring.myboard.command.ReplyVO;
import com.spring.myboard.reply.mapper.IReplyMapper;
import com.spring.myboard.util.PageVO;

@Service
public class ReplyService implements IReplyService {
	
	@Autowired
	private IReplyMapper mapper;

	@Override
	public void replyRegist(ReplyVO vo) {
		mapper.replyRegist(vo);
	}

	@Override
	public List<ReplyVO> getReplyList(int rno, int pageNum) {
		
		PageVO vo = new PageVO();
		vo.setPageNum(pageNum);
		
		Map<String, Object> data = new HashMap<>();
		data.put("pageVO", vo);
		data.put("rno", rno);
		
		return mapper.getReplyList(data);
	}
	
	@Override
	public boolean pwCheck(ReplyVO vo) {
		int inputPw = vo.getRPassword();
		int dbPw = mapper.pwCheck(vo.getRno());
		boolean pwMatch = (inputPw == dbPw);
		return pwMatch;
	}

	@Override
	public int getReplyTotal(int rno) {
		return mapper.getReplyTotal(rno);
	}

	@Override
	public void delete(int rno) {
		mapper.delete(rno);
	}

	
}
