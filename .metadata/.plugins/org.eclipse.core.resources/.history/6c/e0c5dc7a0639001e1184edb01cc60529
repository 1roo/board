<?xml version="1.0" encoding="UTF-8"?>
<!DOCTYPE mapper PUBLIC "-//mybatis.org//DTD Mapper 3.0//EN" "http://mybatis.org/dtd/mybatis-3-mapper.dtd">

<mapper namespace="com.spring.myboard.reply.mapper.IReplyMapper">


	<insert id="replyRegist">
		INSERT INTO reply
		(rno, bno, reply, r_writer)
		VALUES (#{rno}, #{bno}, #{reply}, #{rWriter})	
	</insert>
	
	<select id="getReplyList" resultType="reply">
		SELECT * FROM reply
		WHERE bno = #{bno}
		ORDER BY rno DESC
		LIMIT #{pageVO.pageStart}, #{pageVO.cpp}
	</select>

	<select id="getReplyTotal">
		SELECT COUNT(*) FROM reply
		WHERE bno = #{bno}
	</select>

	<delete id="delete">
		DELETE FROM reply
		WHERE rno = #{rno}
	</delete>










</mapper>